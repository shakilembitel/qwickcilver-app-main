<script>
  // Function to get discount code usage count
  async function checkDiscountCodeUsage(priceRuleId, discountCodeId) {
    try {
      const response = await fetch('/apps/discountcode', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          action: 'CHECKUSAGE',
          data: {
            priceRuleId,
            discountCodeId,
          },
        }),
      });

      const result = await response.json();
      if(result.success === true){
        return result.usage;
      }else if(result.success === false){
        console.error(result);
        return null;
      }
      {% comment %} if (result.success === true && result.usage === 0) {
        console.log(`Discount code usage: ${result.usage}`);
        return result.usage;
      } else if (result.success === false && result.usage > 0) {
        console.log(`Discount code usage: ${result.usage}`);
        return result.usage;
      } else if (result.success === false && result.usage === "Not Found"){
        return result.usage;
      }else{
        console.error(result.error);
      } {% endcomment %}
    } catch (error) {
      console.error('Error checking discount code usage:', error);
      return null;
    }
  }
</script>
