<script>
  // Function to get discount code usage count
  async function checkDiscountCodeUsage(priceRuleId, discountCodeId) {
    try {
      const response = await fetch('/apps/discountcode', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          action: 'CHECKUSAGE',
          data: {
            priceRuleId,
            discountCodeId,
          },
        }),
      });

      const result = await response.json();
      if(result.success === true){
        return result.usage;
      }else if(result.success === false){
        console.error(result);
        return null;
      }
    } catch (error) {
      console.error('Error checking discount code usage:', error);
      return null;
    }
  }
</script>
